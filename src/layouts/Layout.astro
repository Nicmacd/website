---
export interface Props {
  title?: string;
  description?: string;
}

const { title = "Your Name - Product Designer", description = "A product designer making useful things for the internet and exploring the world." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Font - Using Inter as a good alternative to Suisse Int'l -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="font-sans text-gray-900 bg-white">
    <slot />
  </body>
</html>

<style is:global>
  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
  }
  
  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
    scroll-padding-top: 80px; /* Account for fixed header */
  }
  
  /* Custom link styles */
  a {
    transition: all 0.15s ease;
  }
  
  /* Backdrop blur support */
  .backdrop-blur-sm {
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  /* Header Content Layout - Mobile First */
  .header_content-wrapper {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    align-items: center;
  }

  .header_content-left {
    display: flex;
    justify-content: center;
  }

  .header_content-right {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .image-wrapper-3-2 {
    width: 100%;
    max-width: 380px;
  }

  /* Horizontal social links layout */
  .navbar_links-wrapper {
    display: block;
    text-align: center;
    white-space: nowrap;
  }

  /* Desktop Layout */
  @media (min-width: 768px) {
    .header_content-wrapper {
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
      align-items: end;
    }

    .header_content-left {
      justify-content: flex-start;
    }

    .header_content-right {
      align-items: flex-end;
      justify-content: flex-end;
      height: 100%;
    }

    .image-wrapper-3-2 {
      max-width: 580px;
    }

    .navbar_links-wrapper {
      text-align: right;
    }
  }

  /* Webflow w-inline-block equivalent */
  .w-inline-block {
    display: inline-block;
    vertical-align: top;
    margin-right: 1rem;
  }

  .w-inline-block:last-child {
    margin-right: 0;
  }

  /* Text size medium - consistent with nav links */
  .text-size-medium {
    font-size: 1rem;
    font-weight: 500;
    line-height: 1.4;
  }

  /* Desktop spacing and sizing */
  @media (min-width: 768px) {
    .w-inline-block {
      margin-right: 1.5rem;
    }
  }

  /* Button animations */
  .button {
    position: relative;
    color: rgb(20, 20, 20);
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .button .overflow-hidden {
    overflow: hidden;
  }

  .button_underline-wrapper {
    position: relative;
    height: 1px;
    margin-top: 2px;
  }

  .button_underline {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 1px;
    background-color: rgb(20, 20, 20);
    transition: width 0.3s ease;
    display: none;
  }

  .button:hover .button_underline {
    display: block;
    width: 100%;
  }

  /* Hide mobile portrait */
  .hide-mobile-portrait {
    display: inline-block;
  }

  /* Fade-in animations for hero elements */
  .fade-in-image {
    opacity: 0;
    animation: fadeInImage 1.2s ease-out 0.7s forwards;
  }

  .slide-up-nav {
    opacity: 0;
    transform: translateY(20px);
    animation: slideUpNav 0.8s ease-out forwards;
  }

  .slide-up-social {
    opacity: 0;
    transform: translateY(30px);
    animation: slideUpSocial 0.8s ease-out forwards;
  }

  .fade-in-text {
    opacity: 0;
    animation: fadeInText 0.8s ease-out 0.2s forwards;
  }

  /* Individual delays for synchronized effect */
  .nav-item-1 { animation-delay: 0.4s; }
  .nav-item-2 { animation-delay: 0.5s; }
  .nav-item-3 { animation-delay: 0.6s; }

  .social-item-1 { animation-delay: 0.7s; }
  .social-item-2 { animation-delay: 0.8s; }
  .social-item-3 { animation-delay: 0.9s; }
  .social-item-4 { animation-delay: 1.0s; }

  @keyframes fadeInImage {
    to {
      opacity: 1;
    }
  }

  @keyframes slideUpNav {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideUpSocial {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInText {
    to {
      opacity: 1;
    }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .header_content-wrapper {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .header_content-left {
      justify-content: center;
    }
    
    .header_content-right {
      align-items: center;
      justify-content: center;
    }
    
    .navbar_links-wrapper {
      text-align: center;
    }

    .w-inline-block {
      margin-right: 1.5rem;
    }

    .hide-mobile-portrait {
      display: none;
    }
  }
</style>
