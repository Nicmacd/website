  <script is:inline>
    function toggleBooks(year) {
      const extraBooks = document.getElementById(`books-${year}-extra`);
      const arrow = document.getElementById(`arrow-${year}`);
      const button = arrow.parentElement.querySelector('span:last-child');
      
      // Check if currently collapsed (has max-h-0 class or opacity-0)
      if (extraBooks.classList.contains('max-h-0') || extraBooks.classList.contains('opacity-0')) {
        // Expand
        extraBooks.classList.remove('max-h-0', 'opacity-0');
        extraBooks.style.maxHeight = extraBooks.scrollHeight + 'px';
        extraBooks.style.opacity = '1';
        arrow.style.transform = 'rotate(0deg)';
        arrow.textContent = '‚Üë';
        button.textContent = 'Show fewer books';
      } else {
        // Collapse
        extraBooks.style.maxHeight = '0px';
        extraBooks.style.opacity = '0';
        extraBooks.classList.add('max-h-0', 'opacity-0');
        arrow.style.transform = 'rotate(0deg)';
        arrow.textContent = '‚Üì';
        button.textContent = 'Show more books';
      }
    }

    // Smooth scroll without changing URL
    document.addEventListener('DOMContentLoaded', function() {
      const smoothScrollLinks = document.querySelectorAll('.smooth-scroll');
      
      smoothScrollLinks.forEach(link => {
        link.addEventListener('click', function(e) {
          e.preventDefault(); // Prevent default hash behavior
          
          const targetId = this.getAttribute('href').substring(1); // Remove #
          const targetElement = document.getElementById(targetId);
          
          if (targetElement) {
            targetElement.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        });
      });
    });

  </script>
